LogLevel = "info"
LogFormat = "text"

[Fargate]
  Cluster = "{{ gitlab_runner.fargate.cluster }}"
  Region = "{{ gitlab_runner.fargate.region }}"
  Subnet = "{{ gitlab_runner.fargate.subnet }}" # we need a custom private subnet with a NAT gateway to get a static IP
  SecurityGroup = "{{ gitlab_runner.fargate.security_group }}" # dummy-deploy-ci (mix of ssh_open and dummy_infra1_efs)
  TaskDefinition = "{{ gitlab_runner.fargate.task_definition }}"
  EnablePublicIP = {{ gitlab_runner.fargate.public_ip }}
  PlatformVersion = "{{ gitlab_runner.fargate.version }}"

[TaskMetadata]
  Directory = "{{ gitlab_runner.fargate.metadata_dir }}"

[SSH]
  Username = "{{ gitlab_runner.fargate.ssh_user }}"
  Port = {{ gitlab_runner.fargate.ssh_port }}
